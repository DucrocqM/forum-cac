<form method="POST" action="/theme/sauvegarder">
	<div class="form-group">
		<label for="nomtheme">Nom du thème</label>
		<input type="text" name="titre" class="form-control" id="nomtheme" aria-describedby="theme"
			placeholder="Entrer le nom du thème">
		<small id="themeHelp" class="form-text text-muted">Essayer de trouver un mot simple et explicite</small>
	</div>
	<div class="form-group">
		<label for="explicationtheme">Le thème en quelques mots</label>
		<input type="text" name="soustitre" class="form-control" id="explicationtheme" aria-describedby="theme"
			placeholder="Expliquer ce qu'il englobe">
		<small id="explicationthemeHelp" class="form-text text-muted">Essayer de trouver une petite phrase</small>
	</div>
	<button type="submit" class="btn btn-primary">Créer le thème</button>
</form>
